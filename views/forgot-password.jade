extends layout

block content
  form(name="forgot-password", method="post", action="/forgot-password")
    div.form-inner
      h1= title
      h3 Enter your email below to have a temporary password sent.
      div.form-inputs
        div.input
          span.label Email
          input(type="text", name="email")
    div.submit
      input(type="submit", value="Submit")
    div.subfooter-links
    a(href="/") Login
    span= " | " 
    a(href="/register") Register


